<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}" style="color: rgb(79, 13, 13)">{{post.name}}</a>
    </h2>
    <p>
      Post Priority
      <span>{{post.post_number}}</span>
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
